<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="@color/rippleColor">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/black" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:color="@color/categorySelected" android:width="2dp" />
            <solid android:color="@color/categorySelected" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:color="@color/mutedTextColor" android:width="2dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>