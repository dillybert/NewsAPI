<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:padding="8dp">

    <View
        android:id="@+id/topNewsImageCardShimmer"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:background="@drawable/shape_rounded_rectangle_shimmer"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/topNewsAuthorShimmer" />

    <View
        android:id="@+id/topNewsAuthorShimmer"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:background="@drawable/shape_rounded_rectangle_shimmer"

        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/topNewsImageCardShimmer"
        app:layout_constraintLeft_toLeftOf="@id/topNewsImageCardShimmer"
        app:layout_constraintBottom_toTopOf="@id/topNewsTitleShimmer"/>

    <View
        android:id="@+id/topNewsTitleShimmer"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/shape_rounded_rectangle_shimmer"

        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/topNewsAuthorShimmer"
        app:layout_constraintLeft_toLeftOf="@id/topNewsImageCardShimmer"
        app:layout_constraintRight_toRightOf="@id/topNewsImageCardShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>